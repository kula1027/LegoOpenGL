<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffceff61"
            android:alpha="0.9">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_trans"
                android:layout_weight="1"
                android:text="Trans"
                android:onClick="onClickBtn"
                android:background="#89feffa5"
                android:minHeight="60dp"
                android:minWidth="60dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_blue"
                android:layout_weight="1"
                android:background="#4040d9"
                android:text="Blue"
                android:onClick="onClickBtn"
                android:minHeight="60dp"
                android:minWidth="60dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_red"
                android:layout_weight="1"
                android:text="Red"
                android:onClick="onClickBtn"
                android:background="#f73141"
                android:minHeight="60dp"
                android:minWidth="60dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffceff61"
            android:alpha="0.9" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_green"
                android:layout_weight="1"
                android:text="Green"
                android:minHeight="60dp"
                android:minWidth="60dp"
                android:onClick="onClickBtn"
                android:background="#ff23ff21" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_yellow"
                android:layout_weight="1"
                android:text="Yellow"
                android:minHeight="60dp"
                android:minWidth="60dp"
                android:onClick="onClickBtn"
                android:background="#fffffb4c" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_orange"
                android:layout_weight="1"
                android:text="Orange"
                android:minHeight="60dp"
                android:minWidth="60dp"
                android:onClick="onClickBtn"
                android:background="#ffff8034" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffceff61"
            android:alpha="0.9" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_black"
                android:layout_weight="1"
                android:text="Black"
                android:minHeight="60dp"
                android:minWidth="60dp"
                android:onClick="onClickBtn"
                android:background="#ff494949" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_white"
                android:layout_weight="1"
                android:text="White"
                android:minHeight="60dp"
                android:minWidth="60dp"
                android:onClick="onClickBtn"
                android:background="#ffffffff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_brown"
                android:layout_weight="1"
                android:text="Brown"
                android:minHeight="60dp"
                android:minWidth="60dp"
                android:onClick="onClickBtn"
                android:background="#853a2d" />
        </TableRow>

    </TableLayout>
</LinearLayout>